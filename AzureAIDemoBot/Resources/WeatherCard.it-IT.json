{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "speak": "${weather[0].description} a ${name}, con una temperatura di ${formatNumber(main.temp, 0)} gradi.",
    "body": [
        {
            "type": "TextBlock",
            "text": "${name}",
            "size": "Large",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "{{DATE(${formatEpoch(dt, 'yyyy-MM-ddTHH:mm:ssZ')}, SHORT)}} {{TIME(${formatEpoch(dt, 'yyyy-MM-ddTHH:mm:ssZ')})}}",
            "spacing": "None",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${sentenceCase(weather[0].description)}",
            "spacing": "None",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://openweathermap.org/img/wn/${weather[0].icon}@2x.png",
                            "size": "Medium",
                            "altText": "${weather[0].description}",
                            "backgroundColor": "#ccc"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${formatNumber(main.temp, 0)}",
                            "size": "ExtraLarge",
                            "spacing": "None",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Small",
                            "spacing": "None",
                            "wrap": true,
                            "horizontalAlignment": "Left",
                            "text": "°C"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Max ${formatNumber(main.temp_max, 0)} °C",
                            "horizontalAlignment": "Right",
                            "size": "Medium",
                            "spacing": "Small"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Min ${formatNumber(main.temp_min, 0)} °C",
                            "horizontalAlignment": "Right",
                            "wrap": true,
                            "size": "Medium",
                            "spacing": "Small"
                        }
                    ]
                }
            ]
        }
    ]
}